#!/usr/bin/env ruby

require "icloud"

id = ENV["APPLE_ID"]
pw = ENV["APPLE_PW"]

unless id && pw
  puts "Usage: APPLE_ID=you@icloud.com APPLE_PW=your-password icloud-reminders"
  exit 1
end

ICloud::Session.new(id, pw).tap do |session|
  puts "Reminders for #{session.user.full_name}"

  session.reminders.each_with_index do |reminder, i|
    puts "#{i+1}. #{reminder.title}"
  end
end
